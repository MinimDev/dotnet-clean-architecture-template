{
  "$schema": "http://json.schemastore.org/template",
  "author": "Minimdev",
  "classifications": [
    "Solution",
    "Clean Architecture"
  ],
  "name": "Clean Architecture Solution",
  "identity": "Minimdev.CleanArchitecture.Solution",
  "shortName": "cleanarch",
  "icon": "icon.png",
  "tags": {
    "language": "C#",
    "type": "solution"
  },
  "sourceName": "CleanArchitecture",
  "preferNameDirectory": true,
  "sources": [
    {
      "modifiers": [
        {
          "exclude": [
            ".template.config/**",
            ".git/**",
            ".github/**",
            "*.nupkg",
            "*.nuspec",
            "*.csproj",
            ".vs/**",
            "bin/**",
            "obj/**",
            "icon.png",
            "publish.ps1",
            "build.log",
            "msbuild.log"
          ]
        }
      ]
    }
  ],
  "symbols": {
    "Framework": {
      "type": "parameter",
      "description": "The target framework for the project.",
      "defaultValue": "net10.0",
      "replaces": "net10.0"
    }
  },
  "primaryOutputs": [
    {
      "path": "CleanArchitecture.sln",
      "condition": "(HostIdentifier == \"dotnetcli\" || HostIdentifier == \"dotnetcli-preview\")"
    },
    {
      "path": "CleanArchitecture.sln",
      "condition": "(HostIdentifier != \"dotnetcli\" && HostIdentifier != \"dotnetcli-preview\")"
    }
  ]
}