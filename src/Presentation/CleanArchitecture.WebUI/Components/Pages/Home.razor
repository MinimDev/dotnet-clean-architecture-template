@page "/"

<PageTitle>Dashboard</PageTitle>

<MudText Typo="Typo.h4" GutterBottom="true" Class="mb-4">Dashboard</MudText>
<MudText Typo="Typo.body1" Class="mb-8">Welcome to the Clean Architecture Template Admin Panel.</MudText>

<MudGrid>
    <MudItem xs="12" sm="6" md="3">
        <MudPaper Elevation="2" Class="pa-4 d-flex align-center">
            <MudIcon Icon="@Icons.Material.Filled.People" Color="Color.Primary" Size="Size.Large" Class="mr-4" />
            <div>
                <MudText Typo="Typo.h6">Total Users</MudText>
                <MudText Typo="Typo.h4">1,024</MudText>
            </div>
        </MudPaper>
    </MudItem>
    <MudItem xs="12" sm="6" md="3">
        <MudPaper Elevation="2" Class="pa-4 d-flex align-center">
            <MudIcon Icon="@Icons.Material.Filled.Inventory" Color="Color.Secondary" Size="Size.Large" Class="mr-4" />
            <div>
                <MudText Typo="Typo.h6">Products</MudText>
                <MudText Typo="Typo.h4">256</MudText>
            </div>
        </MudPaper>
    </MudItem>
    <MudItem xs="12" sm="6" md="3">
        <MudPaper Elevation="2" Class="pa-4 d-flex align-center">
            <MudIcon Icon="@Icons.Material.Filled.AttachMoney" Color="Color.Success" Size="Size.Large" Class="mr-4" />
            <div>
                <MudText Typo="Typo.h6">Revenue</MudText>
                <MudText Typo="Typo.h4">$12,400</MudText>
            </div>
        </MudPaper>
    </MudItem>
    <MudItem xs="12" sm="6" md="3">
        <MudPaper Elevation="2" Class="pa-4 d-flex align-center">
            <MudIcon Icon="@Icons.Material.Filled.TrendingUp" Color="Color.Warning" Size="Size.Large" Class="mr-4" />
            <div>
                <MudText Typo="Typo.h6">Conversion</MudText>
                <MudText Typo="Typo.h4">4.2%</MudText>
            </div>
        </MudPaper>
    </MudItem>
</MudGrid>

<MudGrid Class="mt-4">
    <MudItem xs="12" md="8">
        <MudPaper Elevation="2" Class="pa-6">
            <MudText Typo="Typo.h6" Class="mb-4">System Overview</MudText>
            <MudText Typo="Typo.body2">
                This dashboard is powered by Blazor Server and MudBlazor. It demonstrates how to consume the Clean Architecture WebAPI endpoints securely using JWT Bearer authentication.
            </MudText>
            <MudAlert Severity="Severity.Info" Class="mt-4">
                Verify the API endpoints logic in the <code>ProductsClient.cs</code> and <code>AuthClient.cs</code>.
            </MudAlert>
        </MudPaper>
    </MudItem>
    <MudItem xs="12" md="4">
        <MudPaper Elevation="2" Class="pa-6">
            <MudText Typo="Typo.h6" Class="mb-4">Quick Links</MudText>
            <MudList T="string">
                <MudListItem Icon="@Icons.Material.Filled.DataSaverOn">
                    <MudLink Href="https://localhost:7253/hangfire" Target="_blank" Color="Color.Primary">Manage Background Jobs</MudLink>
                </MudListItem>
                <MudListItem Icon="@Icons.Material.Filled.DocumentScanner">
                    <MudLink Href="https://localhost:7253/scalar/v1" Target="_blank" Color="Color.Primary">View API Documentation</MudLink>
                </MudListItem>
            </MudList>
        </MudPaper>
    </MudItem>
</MudGrid>
